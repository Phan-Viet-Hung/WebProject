@{
    var isLoggedIn = TempData["UserName"] as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web_Ban_Hang Admin</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/admin.css" rel="stylesheet" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="d-flex flex-column vh-100">

    <!-- Navbar (Menu trên cùng) -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Admin Panel</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home Shop</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="User" asp-action="Index">Quản lý người dùng</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Product" asp-action="Index">Quản lý sản phẩm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Bill" asp-action="Index">Quản lý đơn hàng</a>
                    </li>
                    <li class="nav-item">
                        @if (string.IsNullOrEmpty(isLoggedIn))
                        {
                            <a class="nav-link text-white" asp-area="" asp-controller="User" asp-action="Login">Đăng nhập</a>
                        }
                        else
                        {
                            <span class="nav-link text-white">Xin chào, @isLoggedIn</span>
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Logout">Đăng xuất</a>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main content -->
    <div class="container-fluid mt-5 pt-5">
        <main>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light mt-auto">
        <div class="container">
            &copy; 2024 - Web_Ban_Hang Admin Panel
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
