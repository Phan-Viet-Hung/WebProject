@model IEnumerable<Web_Ban_Hang.Models.User>

@{
    ViewData["Title"] = "Index";
    var welcome = TempData["UserRole"];
}

<h1>Chào mừng @welcome </h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="User" asp-action="Index">
    <input type="text" id="searchInput" name="name" placeholder="Tìm kiếm Account" />
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                Tên
            </th>
            <th>
                CartId
            </th>
            <th>
                Email
            </th>
            <th>
                Mật khẩu
            </th>
            <th>
                SĐT
            </th>
            <th>
                Tuổi
            </th>
            <th>
                Quyền
            </th>
            <th>
                Ngày tạo
            </th>
            <th>
                Chức năng
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CartId)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
