@{
    Layout = "_Layout";
    var addcart = TempData["addtocart"];
}
@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Giỏ hàng của bạn";

    // Tính tổng tiền của tất cả sản phẩm
    decimal grandTotal = Model.Any() ? Model.Sum(item => (decimal)item.TotalAmount) : 0;
}

<h2>@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <p>Giỏ hàng của bạn đang trống.</p>
    <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Tiếp tục mua sắm</a>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Ảnh</th>
                <th>Tên sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Tổng giá</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item.ProductImage" alt="Ảnh sản phẩm" width="100" height="100" />
                    </td>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@String.Format("{0:C}", item.ProductPrice)</td>
                    <td>@String.Format("{0:C}", item.TotalAmount)</td>
                    <td>
                        <a asp-action="RemoveFromCart" asp-route-id="@item.Id" class="btn btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Hiển thị tổng tiền -->
    <div class="mt-3 text-right">
        <h4>Tổng tiền: @String.Format("{0:C}", grandTotal)</h4>
    </div>

    <div>
        <a asp-action="Checkout" class="btn btn-success">Thanh toán</a>
        <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Tiếp tục mua sắm</a>
    </div>
}
